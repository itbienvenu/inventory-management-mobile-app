<DashboardScreen>:
    name: 'dashboard'

    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.96, 0.97, 0.98, 1  # Light gray background
            Rectangle:
                pos: self.pos
                size: self.size

        # Header Section
        BoxLayout:
            size_hint_y: None
            height: '70dp'
            spacing: 20
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15, 15, 15, 15]
                # Subtle shadow effect
                Color:
                    rgba: 0, 0, 0, 0.05
                RoundedRectangle:
                    pos: self.x + 2, self.y - 2
                    size: self.size
                    radius: [15, 15, 15, 15]

            BoxLayout:
                padding: [25, 15]
                Label:
                    text: 'Inventor.io'
                    font_size: '24sp'
                    bold: True
                    color: 0.2, 0.25, 0.35, 1  # Dark blue-gray
                    halign: 'left'
                    text_size: self.size
                    size_hint_x: 0.7

                BoxLayout:
                    size_hint_x: 0.3
                    spacing: 12
                    padding: [0, 10]
                    
                    Button:
                        text: 'Reports'
                        size_hint_x: None
                        width: '110dp'
                        background_normal: ''
                        background_color: 0.27, 0.54, 0.96, 1  # Modern blue
                        color: 1, 1, 1, 1
                        font_size: '14sp'
                        bold: True
                        on_press: app.root.current = 'reports'
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8, 8, 8, 8]
                        canvas.after:
                            Color:
                                rgba: 0, 0, 0, 0.1 if self.state == 'down' else 0
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8, 8, 8, 8]
                    
                    Button:
                        text: 'Logout'
                        size_hint_x: None
                        width: '90dp'
                        background_normal: ''
                        background_color: 0.96, 0.35, 0.35, 1  # Modern red
                        color: 1, 1, 1, 1
                        font_size: '14sp'
                        bold: True
                        on_press: app.logout()
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8, 8, 8, 8]
                        canvas.after:
                            Color:
                                rgba: 0, 0, 0, 0.1 if self.state == 'down' else 0
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [8, 8, 8, 8]

        # Navigation Buttons
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            spacing: 15
            padding: [5, 0]

            Button:
                text: 'Products'
                on_press: app.root.current = 'products'
                background_normal: ''
                background_color: 0.27, 0.54, 0.96, 1  # Blue
                color: 1, 1, 1, 1
                font_size: '16sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12, 12, 12, 12]
                    # Shadow
                    Color:
                        rgba: 0, 0, 0, 0.08
                    RoundedRectangle:
                        pos: self.x + 2, self.y - 2
                        size: self.size
                        radius: [12, 12, 12, 12]

            Button:
                text: 'Stores'
                on_press: app.root.current = 'stores'
                background_normal: ''
                background_color: 0.3, 0.69, 0.49, 1  # Green
                color: 1, 1, 1, 1
                font_size: '16sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12, 12, 12, 12]
                    # Shadow
                    Color:
                        rgba: 0, 0, 0, 0.08
                    RoundedRectangle:
                        pos: self.x + 2, self.y - 2
                        size: self.size
                        radius: [12, 12, 12, 12]

            Button:
                text: 'Orders'
                on_press: app.root.current = 'orders'
                background_normal: ''
                background_color: 0.4, 0.58, 0.93, 1  # Light blue
                color: 1, 1, 1, 1
                font_size: '16sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12, 12, 12, 12]
                    # Shadow
                    Color:
                        rgba: 0, 0, 0, 0.08
                    RoundedRectangle:
                        pos: self.x + 2, self.y - 2
                        size: self.size
                        radius: [12, 12, 12, 12]

            Button:
                text: 'Suppliers'
                on_press: app.root.current = 'suppliers'
                background_normal: ''
                background_color: 0.64, 0.42, 0.89, 1  # Purple
                color: 1, 1, 1, 1
                font_size: '16sp'
                bold: True
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [12, 12, 12, 12]
                    # Shadow
                    Color:
                        rgba: 0, 0, 0, 0.08
                    RoundedRectangle:
                        pos: self.x + 2, self.y - 2
                        size: self.size
                        radius: [12, 12, 12, 12]

        # Main Content Area
        ScrollView:
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: [10, 10]

                # Dashboard Summary Header
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '80dp'
                    padding: [25, 20]
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  # White background
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                        # Subtle shadow
                        Color:
                            rgba: 0, 0, 0, 0.05
                        RoundedRectangle:
                            pos: self.x + 2, self.y - 3
                            size: self.size
                            radius: [15, 15, 15, 15]
                    
                    Label:
                        text: 'Dashboard Summary'
                        font_size: '22sp'
                        bold: True
                        color: 0.2, 0.25, 0.35, 1  # Dark blue-gray
                        halign: 'left'
                        text_size: self.size

                # Statistics Cards
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 20
                    size_hint_y: None
                    height: '140dp'

                    # Total Products Card
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [20, 25]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [15, 15, 15, 15]
                            # Shadow effect
                            Color:
                                rgba: 0, 0, 0, 0.08
                            RoundedRectangle:
                                pos: self.x + 3, self.y - 3
                                size: self.size
                                radius: [15, 15, 15, 15]
                            # Subtle gradient accent
                            Color:
                                rgba: 0.27, 0.54, 0.96, 0.1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.width, 4
                                radius: [15, 15, 0, 0]
                        
                        Label:
                            text: 'Total Products'
                            color: 0.5, 0.55, 0.65, 1  # Muted gray
                            font_size: '14sp'
                            halign: 'center'
                            text_size: self.size
                            size_hint_y: 0.4
                        
                        Label:
                            text: '24'
                            font_size: '32sp'
                            bold: True
                            color: 0.2, 0.25, 0.35, 1  # Dark blue-gray
                            halign: 'center'
                            text_size: self.size
                            size_hint_y: 0.6

                    # Active Stores Card
                    BoxLayout:
                        orientation: 'vertical'
                        padding: [20, 25]
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [15, 15, 15, 15]
                            # Shadow effect
                            Color:
                                rgba: 0, 0, 0, 0.08
                            RoundedRectangle:
                                pos: self.x + 3, self.y - 3
                                size: self.size
                                radius: [15, 15, 15, 15]
                            # Subtle gradient accent
                            Color:
                                rgba: 0.3, 0.69, 0.49, 0.1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.width, 4
                                radius: [15, 15, 0, 0]
                        
                        Label:
                            text: 'Active Stores'
                            color: 0.5, 0.55, 0.65, 1  # Muted gray
                            font_size: '14sp'
                            halign: 'center'
                            text_size: self.size
                            size_hint_y: 0.4
                        
                        Label:
                            text: '4'
                            font_size: '32sp'
                            bold: True
                            color: 0.2, 0.25, 0.35, 1  # Dark blue-gray
                            halign: 'center'
                            text_size: self.size
                            size_hint_y: 0.6