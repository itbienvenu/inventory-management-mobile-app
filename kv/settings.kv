<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        padding: [12,12]
        spacing: 12

        CommonHeader:
            Label:
                text: 'Settings'
                font_size: '20sp'
                bold: True
                color: 1,1,1,1
            Button:
                text: 'Back'
                size_hint_x: None
                width: '80dp'
                background_normal: ''
                background_color: 0.3,0.3,0.3,1
                color: 1,1,1,1
                on_press: app.root.current = 'dashboard'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: [8,8]

            Label:
                text: 'User Profile'
                bold: True
                color: 1,1,1,1
            Label:
                text: 'Username: demo_user\nEmail: demo@example.com'
                color: 0.9,0.9,0.9,1
